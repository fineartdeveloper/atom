{
  "title": "Binding Hyperclick",
  "rules": [
    {
      "description": "Binding F1, F2, F3, Eject to Hyperclick",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f1"
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "fn_locked",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.bluestacks.BlueStacks"
              ]
            }
          ]
        },


        {
          "type": "basic",
          "from": {
            "key_code": "f2"
          },
          "to": [
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 50
            },
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 50
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "fn_locked",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.bluestacks.BlueStacks"
              ]
            }
          ]
        },


        {
          "type": "basic",
          "from": {
            "key_code": "f3"
          },
          "to": [
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 55
            },
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 55
            }
          ],
          "to_after_key_up": [
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 55
            },
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 55
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "fn_locked",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.bluestacks.BlueStacks"
              ]
            }
          ]
        },


        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde"
          },
          "to": [
            {
              "shell_command": "/usr/local/bin/MouseTools -leftClick; sleep 0.0015; /usr/local/bin/MouseTools -leftClick; sleep 0.0015; /usr/local/bin/MouseTools -leftClick; sleep 0.0015; /usr/local/bin/MouseTools -leftClick"
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "fn_locked",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.bluestacks.BlueStacks"
              ]
            }
          ]
        },


        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "right_command"
              ]
            },
            "key_code": "escape"
          },
          "to_after_key_up": [
            {
              "shell_command": "/usr/local/bin/bluestacks 10",
              "lazy": true
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "fn_locked",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.bluestacks.BlueStacks"
              ]
            }
          ]
        }
      ]
    }
  ]
}
