              "pointing_button": "button1",
              "hold_down_milliseconds": 55
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "fn_locked",
              "value": 0
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 150,
            "basic.to_delayed_action_delay_milliseconds": 1
          }
        },


        {
          "type": "basic",
          "from": {
            "consumer_key_code": "eject"
          },
          "to": [
            {
              "pointing_button": "button1",
              "hold_down_milliseconds": 55
