{
  "variables": {
    "pre_prefix": "echo '<pre>'; ",
    "pre_suffix": " echo '</pre>';",
    "lang": "en",
    "locale": "en-US",
    "charset": "UTF-8",
    "space": " ",
    "indentation": "\t",
    "newline": "\n"
  },

  "css": {
    "filters": "css",
    "profile": "css",
    "snippets": {
      "im": "!important|",
      "def": "!default|",
      "glo": "!global|",
      "imp": "@import \"|\";"
    },
    "abbreviations": {}
  },

  "html": {
    "filters": "html, c",
    "profile": "html",
    "snippets": {},
    "abbreviations": {}
  },

  "php": {
    "extends": "",
    "filters": "html",
    "profile": "html",
    "snippets": {
      "classm": "${pre_prefix}print_r(get_class_methods(|));${pre_suffix}$0",
      "classv": "${pre_prefix}print_r(get_class_vars(|));${pre_suffix}$0",
      "comment|comm|c": "// ${1:comment}",
      "th|this": "\\$this",
      "th-": "\\$this->$1",
      "th-v": "\\$this->${1:prop}",
      "th-f": "\\$this->${1:method}($2)",
      "req|rq": "\\$request->${1:prop}",
      "rreq|rrq": "Request \\$request",
      "var": "${2:${1}var} ${4:\\$${3:var}};",
      "ptvar|ptv": "protected ${2:\\$${1:var}};",
      "prvar|prv": "private ${2:\\$${1:var}};",
      "pbvar|pbv": "public ${2:\\$${1:var}};",
      "stvar|stv": "static ${2:\\$${1:var}};",
      "dd": "dd(${1:\\$var});",
      "vd|du": "var_dump(${1:\\$var});",
      "re": "return;|",
      "re:": "return ${1:;}|",
      "re:v": "return \\$${1:var;}|",
      "re:f": "return ${1:functionName}($2);|",
      "re:b": "return ${1:true};|",
      "re-": "return \\$this;",
      "re-v": "return \\$this->${1:var};|",
      "re-f": "return \\$this->${1:foo}($2);|",
      "$|var|v": "\\$${1:varname};|",
      "$:|var:|v:": "\\$${1:varname} = ${3:\\'$2\\'};|",
      "$:n|var:n|v:n": "\\$${1:varname} = ${2:NULL};|",
      "fn|func": "${1:functionName}($2);|"
    },
    "abbreviations": {}
  },

  "blade": {
    "extends": "html",
    "filters": "html",
    "profile": "html",
    "snippets": {},
    "abbreviations": {}
  },

  "xml": {
    "extends": "html",
    "profile": "xml",
    "filters": "html"
  },

  "svg": {
    "filters": "html",
    "profile": "xml",
    "snippets": {},
    "abbreviations": {}
  },

  "xsl": {
    "extends": "html",
    "profile": "xml",
    "filters": "html, xsl",
    "snippets": {},
    "abbreviations": {}
  },

  "haml": {
    "filters": "haml",
    "extends": "html",
    "profile": "xml"
  },

  "jade": {
    "filters": "jade",
    "extends": "html",
    "profile": "xml"
  },

  "jsx": {
    "filters": "jsx, html",
    "extends": "html",
    "profile": "xml"
  },

  "slim": {
    "filters": "slim",
    "extends": "html",
    "profile": "xml"
  },

  "scss": {
    "extends": "css"
  },

  "sass": {
    "extends": "css"
  },

  "less": {
    "extends": "css"
  },

  "stylus": {
    "extends": "css"
  },

  "styl": {
    "extends": "stylus"
  }
}
